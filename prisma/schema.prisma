generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Poster {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  description String
  imageUrl    String
  name        String
  price       Int
  createAt    DateTime   @default(now())
  updateAt    DateTime   @updatedAt
  CartItem    CartItem[]

  @@map("posters")
}

model Trailer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  casts       String
  description String
  genre       String
  name        String
  releasedate String
  trailerurl  String
  imageUrl    String
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt

  @@map("trailer")
}

model Cart {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  items    CartItem[]
  createAt DateTime   @default(now())
  updateAt DateTime   @updatedAt

  @@map("carts")
}

model CartItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  postertId String @db.ObjectId
  poster    Poster @relation(fields: [postertId], references: [id], onDelete: Cascade)
  quantity  Int
  cartId    String @db.ObjectId
  cart      Cart   @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@map("cartitems")
}
